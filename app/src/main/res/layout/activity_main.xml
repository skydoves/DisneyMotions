<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="vm"
      type="com.skydoves.disneymotions.view.ui.main.MainViewModel" />

    <variable
      name="pagerAdapter"
      type="com.skydoves.disneymotions.view.ui.main.MainPagerAdapter" />

    <variable
      name="viewPager"
      type="androidx.viewpager.widget.ViewPager" />

    <variable
      name="navigation"
      type="com.google.android.material.bottomnavigation.BottomNavigationView" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <include
        android:id="@+id/main_toolbar"
        layout="@layout/toolbar_home" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
      android:id="@+id/main_viewpager"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:bindNavigation="@{navigation}"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      app:layout_constraintBottom_toTopOf="@id/main_bottom_navigation"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
      app:pagerAdapter="@{pagerAdapter}" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/main_bottom_navigation"
      android:layout_width="match_parent"
      android:layout_height="52dp"
      android:background="@color/colorPrimary"
      app:itemBackground="@color/colorPrimary"
      app:itemIconTint="@color/white"
      app:itemTextColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/menus" />

    <ProgressBar
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:gone="@{!vm.isLoading()}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>